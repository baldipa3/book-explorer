<% if flash[:messages] %>
  <h2><%= flash[:messages] %></h2>
<% end %>

<%= form_with model: @csv_file do |f| %>
  <div class="container">
    <div class="col-md-6 offset-3 mt-3 session-margin">
      <div class="login-form">
        <%= f.label :file, "Upload CSV File" %>
        <%= f.file_field :file, class: 'form-control-file', required: true %>
      </div>
      <%= f.submit "Upload CSV", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>